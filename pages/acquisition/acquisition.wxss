.navagitorbar {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  font-size: 25rpx;
  font-weight: bold;
}

.navagitorbar image{
  height: 36rpx;
  width: 36rpx;
  background-size:  cover;
  margin: 15rpx 36rpx;
}

.content-tab{
  display: flex;
  height: 88rpx;
  background-color: #f5f5f5;
  flex-direction: row;
  align-items: center;
}

.content-tab .selected{
  border-bottom: solid 3rpx #000000;
  color: #000000;
}

.tab-item{
  width: 250rpx;
  height: 88rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  line-height: 88rpx;
  font-size: 28rpx;
  color: #999999;
}

.tab-item_img{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}


.tab-item_img image {
  width:  10rpx;
  height: 10rpx;
  margin: 5rpx 0rpx 5rpx 10rpx;
  background-size: cover;
}

.contentinfo{
  flex: 1 ;
  display: flex;
  flex-direction: column;
}

.content-item{
  height : 316rpx;
  display: flex;
  flex-direction: column;
  margin-left: 36rpx;
  border-top: solid 1rpx #dddddd; 
}

.contentinfo .first{
  border: none;
}

.item-title{
  height: 80rpx;
  font-size: 28rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.item-title image{
  height: 30rpx;
  width: 30rpx;
  margin-right: 10rpx;
}

.item-detail {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}

.item-detail_text{
  width: 226rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 28rpx;
  border-right: solid 1rpx #eeeeee;
}

.item-detail .last{
  border: none;
}


.item-detail_text .money {
  color: #c8a064;
  font-size: 28rpx;
}

.item-detail_text .money1{
  color: #999999;
  font-size: 28rpx;
}

.item-detail_text .desp{
  color : #999999;
  font-size: 24rpx;
  margin-top:  12rpx;
}

/*右侧隐藏view样式*/
.filter-content {
  position: fixed;
  top: 0 ;
  left: 100%;
  height: 100% ;
  width: 90%;
  background-color: #ffffff;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  scroll-behavior:  auto;
}

.filter-type {
  display: flex;
  flex-direction: column;
}

.filter-type_title{
  height: 88rpx;
  line-height: 88rpx;
  margin-left: 36rpx;
}

.filter-type_detail{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  padding: 0 36rpx;
  justify-content: space-between;
  box-sizing: border-box;
}

.filter-type_detail text{
  display: block;
  width: 48%;
  box-sizing: border-box;
  text-align: center;
  background-color: #f5f5f5;
  line-height: 80rpx;
  margin-bottom: 20rpx;
  color: #999999;
  font-size: 28rpx;
  border: solid 4rpx #f5f5f5;
}

.filter-type_detail .last{
  margin-bottom: 0;
}

.filter-type_detail .selected{
  border: solid 4rpx #39404d;
  color: #39404d;
}

.submit{
  height: 100rpx;
  background-color: #cba064;
  line-height: 100rpx;
  text-align: center;
  font-size: 32rpx;
  color: #ffffff;
}

.opacity{ 
  position: fixed;
  height: 100%;
  width: 100%;
  top: 0;
  opacity:0.3; 
  background-color:#000000; 
  transition:#fff 0.4s ease ;
} 